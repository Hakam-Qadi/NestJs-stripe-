generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  engineType      = "library"
  previewFeatures = ["clientExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid()) @map("id")
  name          String?
  email         String         @unique
  password      String
  refreshTokens RefreshToken[]
  refreshHash   String?

  payments         Payment[]
  stripeCustomerId String?   @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Payment {
  id                    String   @id @default(uuid())
  userId                String
  amount                Decimal  @db.Decimal(10, 2)
  currency              String
  clientSecret          String
  stripePaymentIntentId String   @unique
  status                String   @default("pending") // pending, succeeded, failed, refunded, partially_refunded
  metadata              Json?    // Store order/product info
  refundedAmount        Decimal? @db.Decimal(10, 2)
  failureReason         String?
  completedAt           DateTime?
  refundedAt            DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId, createdAt])
  @@index([status])
  @@index([stripePaymentIntentId])
}

// * multiple refresh tokens (multi-device)
model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
  device    String?

  @@index([userId])
  @@index([expiresAt])
}

// Store webhook events for idempotency and replay capability
model WebhookEvent {
  id              String    @id @default(uuid())
  stripeEventId   String    @unique
  eventType       String
  payload         Json
  processed       Boolean   @default(false)
  processingError String?
  createdAt       DateTime  @default(now())
  processedAt     DateTime?

  @@index([processed, createdAt])
  @@index([eventType])
}
